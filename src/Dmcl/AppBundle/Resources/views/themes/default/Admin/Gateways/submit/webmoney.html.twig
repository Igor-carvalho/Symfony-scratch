<html>
    <head>
        <title></title>
    </head>
    <body>
        <form name="webmoney" method="POST" action="https://merchant.wmtransfer.com/lmi/payment.asp"> 
            <input type="hidden" name="LMI_PAYEE_PURSE" value="{{ gateway.shopIdPublicKey }}">
            <input type="hidden" name="LMI_PAYMENT_AMOUNT" value="{{ order.amount }}">
            <input type="hidden" name="LMI_PAYMENT_NO" value="{{ order.transactionId }}">
            <input type="hidden" name="LMI_PAYMENT_DESC" value="{{ project_name() }}">
            <input type="hidden" name="LMI_PAYMENT_CURRENCY" value="{{ config.currency }}">
            <input type="hidden" name="LMI_SIM_MODE" value="0"> 
            <input type="hidden" name="LMI_RESULT_URL" value="{{ url( 'payments_webmoney_check') }}"> 
            <input type="hidden" name="LMI_SUCCESS_URL" value="{{ url( 'payments_success') }}">
            <input type="hidden" name="LMI_SUCCESS_METHOD" value="1"> 
            <input type="hidden" name="LMI_FAIL_URL" value="{{ url( 'payments_error' ) }}"> 
            <input type="hidden" name="LMI_FAIL_METHOD" value="1">  
        </form> 
        <script type='text/javascript'>
            document.webmoney.submit();
        </script>
    </body>
</html>