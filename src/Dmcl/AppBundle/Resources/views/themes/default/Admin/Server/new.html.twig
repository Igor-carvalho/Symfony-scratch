{% extends 'AppBundle:themes/default/base-admin:base.html.twig' %}

{% block title %}{{ "pages.servers.new.title" | trans }}{% endblock %}
{% block page_title %}{{ "pages.servers.new.title" | trans }}{% endblock %}


{% block body -%}
    {% include "AppBundle:themes/default/base-admin:errors.html.twig" %}
    <div class="col-md-12">
        <a class="btn btn-default btn-sm pull-right" href="{{ path('server') }}">
            {{ "pages.servers.new.back_to_list" | trans }}
        </a>
    </div>
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {{ form_start(form) }}
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(form.name,"pages.servers.attrs.name" | trans ) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(form.domain,"pages.servers.attrs.domain" | trans ) }}
            {{ form_widget(form.domain) }}
        </div>
        <div class="col-md-4 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(form.ipAddress,"pages.servers.attrs.ip_address" | trans ) }}
            {{ form_widget(form.ipAddress) }}
        </div>
        <div class="col-md-3 col-xs-12 no-padding margin-btm-5">
        {{ form_label(form.port,"pages.servers.attrs.port" | trans ) }}
        {{ form_widget(form.port) }}
        </div>
        <div class="col-md-3 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(form.maxConnections,"pages.servers.attrs.max_connections" | trans ) }}
            {{ form_widget(form.maxConnections) }}
        </div>

        <div class="col-md-2 col-xs-12 no-pad-right margin-btm-5" style="padding-top: 3px">
            {{ form_label(form.enabled,"pages.servers.attrs.enabled" | trans ) }}
            <br/>
            {{ form_widget(form.enabled) }}
        </div>
        {#<div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">#}
            {#{{ form_label(form.serverZone,"pages.servers.attrs.server_zone" | trans ) }}#}
            {#{{ form_widget(form.serverZone) }}#}
        {#</div>#}
        <div class="col-md-5 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(form.sshUsername,"pages.servers.attrs.ssh_username" | trans ) }}
            {{ form_widget(form.sshUsername) }}
        </div>
        <div class="col-md-5 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(form.sshPassword,"pages.servers.attrs.ssh_password" | trans ) }}
            {{ form_widget(form.sshPassword) }}
        </div>
        <div class="col-md-2 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(form.sshPort,"pages.servers.attrs.ssh_port" | trans ) }}
            {{ form_widget(form.sshPort) }}
        </div>
        <div class="clearfix"></div>
        <div class="col-md-2 col-xs-12 no-pad-left margin-btm-5" style="padding-top: 3px">
            {{ form_label(form.proxyAgent,"pages.servers.attrs.relay_agent" | trans ) }}
            {{ form_widget(form.proxyAgent) }}
        </div>
        <div class="col-md-12 col-xs-12 no-padding">
            {{ form_widget(form.submit,{'attr':{
            'class': 'btn btn-success btn-sm pull-right',
            }}) }}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
