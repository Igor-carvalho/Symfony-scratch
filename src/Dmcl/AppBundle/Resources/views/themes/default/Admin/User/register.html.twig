{% extends 'AppBundle:themes/default/base-admin:base.html.twig' %}

{% block page_title %}{{ "pages.user.new.title" | trans }}{% endblock %}

{% block body_parent %}
    {% include "AppBundle:themes/default/base-admin:errors.html.twig" %}
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-secondary btn-sm pull-right" href="{{ path('user_resellers') }}">
                {{ "pages.user.new.back_to_list" | trans }}
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">
            {{ form_start(form) }}
                <div>
                    {{ form_label(form.username,"pages.user.attrs.username" | trans ) }}
                    {{ form_widget(form.username) }}
                </div>  
                <div>
                    {{ form_label(form.email,"pages.user.attrs.email" | trans ) }}
                    {{ form_widget(form.email) }}
                </div>  
                <div>
                    {{ form_label(form.credits,"pages.user.attrs.credits" | trans ) }}
                    {{ form_widget(form.credits) }}
                </div> 
                <div style="margin-top: 5px;padding: 1px" class="col-md-12">
                    <input type="submit" id="_submit" class="btn btn-success btn-sm pull-right"   name="_submit" value="{{ 'pages.user.create_reseller'| trans }}"/>
                </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}