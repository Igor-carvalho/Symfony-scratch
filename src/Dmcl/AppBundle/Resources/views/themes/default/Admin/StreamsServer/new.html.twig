                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_label(form.pass,"pages.streams_server.attrs.password" | trans) }}
                                    {{ form_widget(form.pass) }}
                                </div>
                            </div>                       
                        </div>     
                    </div>

                    <div id="menu1" class="tab-pane fade">
                        <div class="row">
                            <div class="col-md-2">
                                <div class="form-group">
