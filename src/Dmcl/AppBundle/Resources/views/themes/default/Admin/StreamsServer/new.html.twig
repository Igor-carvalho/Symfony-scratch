                        <a class="btn btn-default btn-sm pull-left" href="{{ path('streams_server') }}">{{ "pages.streams_server.new.back_to_list" | trans }}</a>
                    </div>

                    <div class="col-md-6">
                        {{ form_widget(form.submit,{'attr':{
