{% extends 'AppBundle:themes/default/base-admin:base.html.twig' %}

{% block page_title %}{{ "pages.streams_server.new.title" | trans }}{% endblock %}
{% block page_description %}{% endblock %}

{% block body %}
    <div class="box-body">
        <div class="row">
            {% include "AppBundle:themes/default/base-admin:errors.html.twig" %}
            {{ form_start(form) }}  
            <div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12">
                <ul class="nav nav-tabs">                   
                    <li class="active">
                        <a data-toggle="tab" href="#home">{{ "base_admin.sidebar.menu.admin.general_settings" | trans }}</a>
                    </li>
                    
                    <li>
                        <a data-toggle="tab" href="#menu1">{{ "pages.settings.attrs.stream_server" | trans }}</a>
                    </li>
                    
                    <li>
                        <a data-toggle="tab" href="#menu2">{{ "pages.settings.attrs.hls_dash" | trans }}</a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div id="home" class="tab-pane fade in active">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    {{ form_label(form.name,"pages.streams_server.attrs.name" | trans ) }}
                                    {{ form_widget(form.name) }}
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    {{ form_label(form.port,"pages.streams_server.attrs.sshport" | trans) }}
                                    {{ form_widget(form.port) }}
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    {{ form_label(form.serverAddress,"pages.streams_server.attrs.serveraddress" | trans ) }}
