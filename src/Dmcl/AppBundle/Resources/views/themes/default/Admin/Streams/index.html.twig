                <thead>
                    <tr>
                        <th style="width:5%;">{{ "pages.streams.name" | trans }}</th>
                        <th style="width:5%;">{{ "pages.streams.category" | trans }}</th>
                        <th style="width:5%;">{{ "pages.streams.actions" | trans }}</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}