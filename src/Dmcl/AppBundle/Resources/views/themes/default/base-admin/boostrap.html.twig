    <script src="{{ asset("bundles/assets/themes/default/plugins/jquery.cokie.min.js") }}"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="{{ asset("bundles/assets/themes/default/bootstrap/js/bootstrap.min.js") }}"></script>

    <script src="{{ asset('bundles/assets/themes/default/plugins/bootstrap-datetime-picker/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('bundles/assets/themes/default/plugins/bootstrap-select/js/bootstrap-select.min.js') }}"></script>

