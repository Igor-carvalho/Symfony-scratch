{% include "AppBundle:themes/default/base-admin:errors.html.twig" %}

<div class="row">
    <div class="col-md-12">
        <a class="btn btn-default btn-sm pull-right" href="{{ path('resellers-vod') }}">
            {{ "pages.vod.new.back_to_list" | trans }}
        </a>
    </div>
</div>
{{ form_start(form, {'attr': {'id': 'form-upload'}}) }}
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">

        <div class="row">
            <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
                {{ form_label(form.enabled,"pages.vod.attrs.enabled" | trans ) }}
                {{ form_widget(form.enabled) }}
            </div>
           <div class="col-md-6 col-xs-6">
                {{ form_widget(form.typeVod) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-xs-12 no-pad-left margin-btm-5">
                {{ form_label(form.title,"pages.vod.attrs.title" | trans ) }}
                {{ form_widget(form.title) }}
            </div>
            <div class="col-md-2 col-xs-12 no-pad-right no-pad-left margin-btm-5">
                {{ form_label(form.price,"pages.vod.attrs.price" | trans ) }}
                {{ form_widget(form.price) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-xs-12 no-pad-left margin-btm-5">
                {{ form_label(form.genres,"pages.vod.attrs.genre" | trans ) }}
                {{ form_widget(form.genres) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-xs-12 no-padding margin-btm-5" id="file_upload">
                {{ form_label(form.coverFile,"pages.vod.attrs.cover" | trans ) }}
                {{ form_widget(form.coverFile) }}
				<input type="hidden" name="file_name" id="file_name">
            </div>
            <div class="col-md-4 col-xs-12 margin-btm-5">
                {{ form_label(form.director,"pages.vod.attrs.director" | trans ) }}
                {{ form_widget(form.director) }}
            </div>
            <div class="col-md-4 col-xs-12 no-pad-right margin-btm-5">
                {{ form_label(form.year,"pages.vod.attrs.year" | trans ) }}
                {{ form_widget(form.year) }}
            </div>
            <div class="col-md-12 col-xs-12  no-margin no-padding margin-btm-5">
                {{ form_label(form.description,"pages.vod.attrs.description" | trans ) }}
                {{ form_widget(form.description) }}
            </div>
        </div>
        <input type="hidden" name="folderName" value="{{ token }}">
        <br/>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12 dropzone dropzone-previews dz-clickable dz-message">
                <div class="dz-default dz-message ">
                </div>
            </div>
        </div>
    </div>
</div>
<br/>
<div class="row">
    <div class="col-md-12">
        <button id="btn-submit" class="btn btn-success btn-sm" type="submit">
            {{ btnLabel }}
        </button>
    </div>
</div>
{{ form_end(form) }}