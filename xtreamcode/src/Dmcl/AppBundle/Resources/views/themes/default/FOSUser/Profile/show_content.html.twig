<div class="row">
    <div class="col-md-3">
        <!-- Profile Image -->
        <div class="box box-primary">
            <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="{{ app.user.avatar  ? asset("uploads/"~app.user.avatar):asset("bundles/assets/themes/default/dist/img/user.png") }}" alt="User profile picture">
                <h3 class="profile-username text-center"> {{ user.name | default("Anonymous") }}</h3>
            </div><!-- /.box-body -->
        </div><!-- /.box -->

        <!-- About Me Box -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">{{ "pages.profile.details.contact" | trans }}</h3>
            </div><!-- /.box-header -->
            <div class="box-body">
                <p><i class="fa fa-phone"></i> {{ user.phone | default("-") }}</p>
                <p><i class="fa fa-envelope"></i> {{ user.email | default("-") }}</p>
                <p><i class="fa fa-map-marker"></i> {{ user.address | default("-") }}</p>
                <hr>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div><!-- /.col -->
    <div class="col-md-9">
        <div class="col-md-12" style="padding-left: 0px">
            <h4 style="font-weight: 300"><i class="fa fa-user" style="margin-right: 10px"></i>{{ "pages.profile.details.basic_information" | trans }}</h4>
            <p>
                <strong>{{ "pages.profile.details.full_name" | trans }}</strong>  -  {{ user.name }}
            </p>
            <p>
                <strong>{{ "pages.profile.details.username" | trans }}</strong>  -  {{ user.username }}
            </p>
            <p>
                <strong>{{ "pages.profile.details.country" | trans }}</strong>  -  {{ user.country | get_country }}
            </p>
        </div>
        <div class="col-md-12" style="padding-left: 0px">
            <h4 style="font-weight: 300"><i class="fa fa-phone" style="margin-right: 10px"></i>{{ "pages.profile.details.contact_information" | trans }}</h4>
            <p>
                <strong>{{ "pages.profile.details.email_address" | trans }}</strong>  -  {{ user.email }}
            </p>
            <p>
                <strong>{{ "pages.profile.details.phone_number" | trans }}</strong>  -  {{ user.phone }}
            </p>
            <p>
                <strong>{{ "pages.profile.details.address" | trans }}</strong>  -  {{ user.address }}
            </p>
        </div>
        {#{% render(controller("FOSUserBundle:Profile:edit")) %}#}
    </div><!-- /.col -->
</div><!-- /.row -->

{% if app.user == user %}
    <div class="post">
        <div class="row">
            <div style="margin-bottom: 5px" class="col-xs-12">
                <div class="form-group pull-right">
                    <a class="btn btn-warning btn-md" href="{{ path('fos_user_change_password') }}">
                        {{ "pages.profile.password_change" | trans }}
                    </a>
                    
                    <a class="btn btn-primary btn-md" href="{{ path('fos_user_profile_edit') }}">
                        {{ "pages.profile.edit" | trans }}
                    </a>
                </div>
            </div>
        </div>
    </div><!-- /.post -->
{% endif %}