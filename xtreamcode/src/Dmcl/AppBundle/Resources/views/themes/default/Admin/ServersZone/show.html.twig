{% extends 'AppBundle:themes/default/base-admin:base.html.twig' %}
{% block title %}{{ "pages.servers_zone.show.title" | transchoice(0,{"%name%":entity.name}) }}{% endblock %}
{% block page_title %}{{ "pages.servers_zone.show.title" | transchoice(0,{"%name%":entity.name}) }}{% endblock %}

{% block body -%}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Countries</th>
                <td>{{ entity.countries | length }}</td>
            </tr>
            <tr>
                <th>Hasdefault</th>
                <td>{{ entity.hasDefault }}</td>
            </tr>
            <tr>
                <th>Servers</th>
                <td>{{ entity.servers | length }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('servers-zone') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('servers-zone_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
