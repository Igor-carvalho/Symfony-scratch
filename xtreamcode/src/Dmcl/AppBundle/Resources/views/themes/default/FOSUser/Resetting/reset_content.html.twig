{% if(form_errors(form.new)) %}
        <div class="alert alert-danger">{{ form_errors(form.new) }}</div>
    {% endif %}
<form style="padding-top: 100px;" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST"
      class="fos_user_resetting_reset">
    <div class="form-group">
        <label>New password:</label>
        {{ form_widget(form.new.first,  { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
        <label>Verification:</label>
        {{ form_widget(form.new.second,  { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div>
        <input class="button button-important" type="submit"
               value="Change Password"/>
    </div>
    {{ form_rest(form) }}
</form>
