{% extends 'AppBundle:themes/default/base-admin:base.html.twig' %}

{% block title %}{{ "pages.servers.edit.title" | trans }}{% endblock %}
{% block page_title %}{{ "pages.servers.edit.title" | trans }}{% endblock %}

{% block vars %}
    var msgDelete = "{{ "pages.servers.msg_delete" | trans }}";
{% endblock %}

{% block body -%}
    {% include "AppBundle:themes/default/base-admin:errors.html.twig" %}
    <div class="col-md-12">
        <a class="btn btn-default btn-sm pull-right" href="{{ path('server') }}">
            {{ "pages.servers.edit.back_to_list" | trans }}
        </a>
    </div>
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {{ form_start(edit_form) }}
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.name,"pages.servers.attrs.name" | trans ) }}
            {{ form_widget(edit_form.name) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.domain,"pages.servers.attrs.domain" | trans ) }}
            {{ form_widget(edit_form.domain) }}
        </div>
        <div class="col-md-4 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.ipAddress,"pages.servers.attrs.ip_address" | trans ) }}
            {{ form_widget(edit_form.ipAddress) }}
        </div>
        <div class="col-md-3 col-xs-12 no-padding margin-btm-5">
            {{ form_label(edit_form.port,"pages.servers.attrs.port" | trans ) }}
            {{ form_widget(edit_form.port) }}
        </div>
        <div class="col-md-3 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.maxConnections,"pages.servers.attrs.max_connections" | trans ) }}
            {{ form_widget(edit_form.maxConnections) }}
        </div>

        <div class="col-md-2 col-xs-12 no-pad-right margin-btm-5" style="padding-top: 3px">
            {{ form_label(edit_form.enabled,"pages.servers.attrs.enabled" | trans ) }}
            <br/>
            {{ form_widget(edit_form.enabled) }}
        </div>
        {#<div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">#}
        {#{{ form_label(edit_form.serverZone,"pages.servers.attrs.server_zone" | trans ) }}#}
        {#{{ form_widget(edit_form.serverZone) }}#}
        {#</div>#}
        <div class="col-md-5 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.sshUsername,"pages.servers.attrs.ssh_username" | trans ) }}
            {{ form_widget(edit_form.sshUsername) }}
        </div>
        <div class="col-md-5 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.sshPassword,"pages.servers.attrs.ssh_password" | trans ) }}
            {{ form_widget(edit_form.sshPassword) }}
        </div>
        <div class="col-md-2 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.sshPort,"pages.servers.attrs.ssh_port" | trans ) }}
            {{ form_widget(edit_form.sshPort) }}
        </div>
        <div class="col-md-2 col-xs-12 no-pad-left margin-btm-5" style="padding-top: 3px">
            {{ form_label(edit_form.proxyAgent,"pages.servers.attrs.relay_agent" | trans ) }}
            {{ form_widget(edit_form.proxyAgent) }}
        </div>
        <div class="col-md-12 col-xs-12 no-padding">
            {{ form_widget(edit_form.submit,{'attr':{
            'class': 'btn btn-success btn-sm pull-left',
            }}) }}
        </div>
        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}
    </div>

    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {{ form(delete_form) }}
    </div>
{% endblock %}
