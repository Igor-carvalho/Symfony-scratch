{% extends 'AppBundle:themes/default/base-admin:base.html.twig' %}
{% block title %}{{ "pages.customers.edit.title" | trans }}{% endblock %}
{% block page_title %}{{ "pages.customers.edit.title" | trans }}{% endblock %}

{% block vars %}
    var msgDelete = "{{ "pages.customers.msg_delete" | trans }}";
{% endblock %}

{% block body -%}
    {% include "AppBundle:themes/default/base-admin:errors.html.twig" %}
    <div class="col-md-12">
        <a class="btn btn-default btn-sm pull-right" href="{{ path('customers') }}">
            {{ "pages.customers.edit.back_to_list" | trans }}
        </a>
    </div>
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12">
        {{ form_start(edit_form) }}
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.name,"pages.customers.attrs.name" | trans ) }}
            {{ form_widget(edit_form.name) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.email,"pages.customers.attrs.email" | trans ) }}
            {{ form_widget(edit_form.email) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.username,"pages.customers.attrs.username" | trans ) }}
            {{ form_widget(edit_form.username) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.password,"pages.customers.attrs.password" | trans ) }}
            {{ form_widget(edit_form.password) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.code,"pages.customers.attrs.code" | trans ) }}
            {{ form_widget(edit_form.code) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-right margin-btm-5">
            {{ form_label(edit_form.country,"pages.customers.attrs.country" | trans ) }}
            {{ form_widget(edit_form.country) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5">
            {{ form_label(edit_form.concurrentConnections,"pages.customers.attrs.concurrent_connections" | trans ) }}
            {{ form_widget(edit_form.concurrentConnections) }}
        </div>
        <div class="col-md-6 col-xs-12 no-pad-left margin-btm-5" style="padding-top: 30px">
            {{ form_label(edit_form.enabled,"pages.customers.attrs.enabled" | trans ) }}
            {{ form_widget(edit_form.enabled) }}
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 col-xs-12 no-padding margin-btm-5">
            <label for="macs">{{ "pages.customers.attrs.macs" | trans }}</label>
            <select id="macs" name="macs[]" class="select2-tag form-control" multiple>
                {% for mac in entity.macs %}
                    <option selected value="{{ mac }}">{{ mac }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="col-md-12 col-xs-12 no-padding margin-btm-5">
            <label for="ips">{{ "pages.customers.attrs.ips" | trans }}</label>
            <select id="ips" name="ips[]" class="select2-tag form-control" multiple>
                {% for ip in entity.ips %}
                    <option selected value="{{ ip }}">{{ ip }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-12 col-xs-12 no-padding">
            {{ form_label(edit_form.playlists,"pages.customers.attrs.playlists" | trans ) }}
            {{ form_widget(edit_form.playlists) }}
        </div>
        <div class="col-md-12 col-xs-12 no-padding margin-btm-5" style="margin-top: 10px">
            {{ form_widget(edit_form.submit,{'attr':{
            'class': 'btn btn-success btn-sm pull-left',
            }}) }}
        </div>
        {{ form_rest(edit_form) }}
        {{ form_end(edit_form) }}
        <div class="col-md-12 col-sm-12 col-xs-12 no-padding">
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock %}
